<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:id="@+id/card_layout"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#F8FBF4"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_marginStart="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banna Apple Mango Pie"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginStart="10dp"
                android:textSize="10sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:text="Fresh from thsan jose"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textWordQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textSize="10sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/textViewQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="200"
                    android:textSize="10sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#C1D5AA"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textWordPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚±"
                            android:textSize="10sp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="212"
                            android:textSize="10sp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textKilosPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/kls"
                            android:textSize="10sp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/addToBasket_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#FF077415"
                    android:elevation="2dp"
                    android:text="Add to Basket"
                    android:textSize="10sp"
                    app:cornerRadius="8dp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/plus"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#30B140"
                    android:elevation="2dp"
                    android:padding="0dp"
                    android:text="+"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/quantity"
                    android:backgroundTint="#30B140"
                    android:elevation="2dp"
                    android:padding="0dp"
                    android:text="-"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:cornerRadius="10dp" />

            </RelativeLayout>

        </LinearLayout>






        




    </LinearLayout>



</androidx.cardview.widget.CardView>